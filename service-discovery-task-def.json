{
    "family": "service-discovery",
    "volumes": [
        {
            "name": "ecs",
            "host": {"sourcePath": "/etc/ecs"}
        }
    ],
    "containerDefinitions": [
        {
            "environment": [],
            "name": "service-discovery",
            "image": "nanoscale/aws-ecs-service-discovery",
            "cpu": 2,
            "memory": 45,
            "entryPoint": ["awsesd"],
            "mountPoints": [
                {
                    "sourceVolume": "ecs",
                    "containerPath": "/etc/ecs",
                    "readOnly": true
                }
            ],
            "essential": true
        }
    ]
}
